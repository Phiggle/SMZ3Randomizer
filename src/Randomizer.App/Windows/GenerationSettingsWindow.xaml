<Window x:Class="Randomizer.App.Windows.GenerationSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Randomizer.App.Windows"
        xmlns:viewModels="clr-namespace:Randomizer.Data.ViewModels;assembly=Randomizer.Data"
        xmlns:controls="clr-namespace:Randomizer.App.Controls"
        xmlns:wpf="clr-namespace:DynamicForms.Library.WPF;assembly=DynamicForms.Library.WPF"
        MinWidth="650"
        MinHeight="500"
        mc:Ignorable="d"
        Loaded="GenerationSettingsWindow_OnLoaded"
        Title="SMZ3 Cas' Randomizer" Height="650" Width="600">
  <Window.DataContext>
    <viewModels:GenerationWindowViewModel></viewModels:GenerationWindowViewModel>
  </Window.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>
    <TabControl Grid.Row="0">
      <TabItem Header="Basic">
        <controls:GameSettingsBasicPanel x:Name="BasicPanel" Data="{Binding}" />
      </TabItem>
      <TabItem Header="Game Settings">
        <ScrollViewer Padding="0 0 5 0">
          <wpf:DynamicFormControl Data="{Binding GameSettings}"/>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Logic/Patches">
        <ScrollViewer Padding="0 0 5 0">
          <wpf:DynamicFormControl Data="{Binding Logic}"/>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Items/Locations">
        <ScrollViewer Padding="0 0 5 0">
          <controls:GameSettingsItemPanel x:Name="ItemPanel" Data="{Binding}" />
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Interface/Controls">
        <ScrollViewer Padding="0 0 5 0">
          <wpf:DynamicFormControl Data="{Binding Customizations}"/>
        </ScrollViewer>
      </TabItem>
    </TabControl>

    <Border Grid.Row="1"
            Style="{StaticResource BottomPanel}">
      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  Grid.Column="1"
                  Margin="49,0,0,0">

        <Button x:Name="SubmitConfigsButton"
                Visibility="{Binding IsMultiplayer, Mode=OneTime, Converter={StaticResource BoolToVisibilityConverter}}"
                Margin="0 0 8 0">_Submit Settings
        </Button>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
          <Button x:Name="GenerateGameButton" Click="GenerateGameButton_OnClick">_Generate</Button>
          <Button x:Name="GenerateMenuButton"
                  MinWidth="0"
                  Width="23"
                  Content="▼"
                  FontSize="8"
                  Click="GenerateMenuButton_OnClick"
                  BorderThickness="0,1,1,1"
                  Margin="0,0,0,0">
            <Button.ContextMenu>
              <ContextMenu>
                <MenuItem Header="Generate _Stats" Name="GenerateStatsMenuItem" Click="GenerateStatsMenuItem_OnClick"></MenuItem>
                <MenuItem Header="Save _Preset" Name="SavePresetMenuItem" Click="SavePresetMenuItem_OnClick"></MenuItem>
              </ContextMenu>
            </Button.ContextMenu>
          </Button>
        </StackPanel>

        <Button x:Name="CancelButton" Click="CancelButton_OnClick">_Cancel</Button>
      </StackPanel>
    </Border>

  </Grid>
</Window>

